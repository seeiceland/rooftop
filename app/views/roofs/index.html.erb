<div id="roofs">
  <h1>Rooftops</h1>
  <div>
    <div>
      <div class="row">
        <% @roofs.each do |roof| %>
          <div class="col-xs-12 col-sm-6 col-md-4">
            <%= link_to roof do %>
              <div class= "rooftop">
                <div class="roof-image" style="background-image: linear-gradient(to bottom,rgba(20,20,20, 0.8),rgba(76,76,76,0.2) 30%), url(<%= cl_image_path roof.photo, crop: :fill %>)">;

                </div>
                <div class="roof-content">
                  <div class= "roof-name"><%=roof.name%></div>
                  <div class="roof-description">
                    <p><%= roof.location %></p><h8><%= roof.price %> NIS</h8>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
      <%= link_to "Add a new Rooftop", new_roof_path, class: "btn button btn-start add" %>
    </div>
  </div>
</div>
<div
  id="map"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  >
</div>
